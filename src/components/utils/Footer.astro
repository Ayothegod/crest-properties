---
// import Logo from "./Logo";
import { footerDataColOne, footerDataColTwo } from "@/lib/data";
import { MapPinned, Phone, Mail } from "lucide-astro";
const { pathname } = Astro.url;

const escapeUrls =
  pathname !== "/" &&
  pathname !== "/register" &&
  pathname !== "/login" &&
  pathname !== "/forgot-password" &&
  pathname !== "/auth/verify-otp" &&
  pathname !== "/auth/reset-password";
---

{
  escapeUrls && (
    <main class:list={[]}>
      <div class="bg-footer-bg w-full">
        <div class="bodySize px-2 py-8">
          <div class="flex flex-col-reverse md:flex-row md:justify-between gap-y-8">
            <div class="text-white flex flex-col gap-y-4">
              <div class="font-light md:text-sm space-y-2">
                <div class="flex items-center gap-2">
                  <MapPinned class="h-5 w-5" />
                  <span class="leading-7">
                    {" "}
                    24, Azuabie street, Rivers state{" "}
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <Phone class="h-5 w-5" />
                  <span class="leading-7">07000020000</span>
                </div>
                <div class="flex items-center gap-2">
                  <Mail class="h-5 w-5" />
                  <span class="leading-7">coldmetalInfo@gmail.com</span>
                </div>
              </div>

              <div class="flex items-center gap-2 mt-4">
                <div class="text-white text-3xl h-8 w-8">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path
                      fill="currentColor"
                      d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95"
                    />
                  </svg>
                </div>

                <div class="text-white text-3xl h-8 w-8">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path
                      fill="currentColor"
                      d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4zm9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8A1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5a5 5 0 0 1-5 5a5 5 0 0 1-5-5a5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3"
                    />
                  </svg>
                </div>

                <div class="text-white text-3xl h-8 w-8">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path
                      fill="currentColor"
                      d="M8 2H1l8.26 11.015L1.45 22H4.1l6.388-7.349L16 22h7l-8.608-11.478L21.8 2h-2.65l-5.986 6.886zm9 18L5 4h2l12 16z"
                    />
                  </svg>
                </div>

                <div class="text-white text-3xl h-8 w-8">
                  <svg viewBox="0 0 24 24">
                    <path
                      fill="currentColor"
                      d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
                    />
                  </svg>
                </div>
              </div>
            </div>

            <div class="text-white flex flex-col md:flex-row md:gap-x-8 gap-y-8">
              <div>
                <h3 class="font-medium text-lg mb-3">BUY, RENT AND SELL</h3>
                <ul class="flex flex-col gap-y-1">
                  {footerDataColOne.map((row) => (
                    <a href={row.url}>
                      <p class="font-light">{row.title}</p>
                    </a>
                  ))}
                </ul>
              </div>

              <div>
                <h3 class="font-medium text-lg mb-3">COMPANY</h3>
                <ul class="flex flex-col gap-y-1">
                  {footerDataColTwo.map((row) => (
                    <a href={row.url}>
                      <li class="font-light">{row.title}</li>
                    </a>
                  ))}
                </ul>
              </div>
            </div>
          </div>

          <hr class="my-8" />

          <div class="text-neutral-500 text-center">
            <div class="flex flex-col md:flex-row md:justify-between text-sm">
              <p>2024CrestProperties. All rights reserved</p>

              <div class="flex items-center justify-center text-center">
                <p class="px-2">Privacy Policy</p> -
                <p class="px-2">Terms and Conditions</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  )
}

<script></script>
