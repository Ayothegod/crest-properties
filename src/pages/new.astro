---
import "@/styles/globals.css";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import houseImage from "@/assets/house-image.jpeg";
---

<Layout title="Crest properties - about">
  <header>
    <div class="logo"></div>
    <nav>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Listings</a></li>
        <li><a href="#">Lands</a></li>
        <li><a href="#">About Us</a></li>
        <li><a href="#">Blog</a></li>
        <li><a href="#">List property</a></li>
      </ul>
    </nav>
  </header>

  <section class="hero">
    <Image
      src={houseImage}
      alt="House Image"
      class="house-image"
      class="w-full rounded-lg shadow-lg"
    />
    <h1>Unlock Opportunities: Rent, Buy, and Invest</h1>
    <p>
      Explore a wide range of properties for rent, sale, and investment
      opportunities.
    </p>
    <form>
      <input type="text" placeholder="Search location" />
      <button>Search</button>
    </form>
  </section>

  <footer>
    <p>&copy; WillaCrest 2024</p>
  </footer>
</Layout>

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: #333;
    color: #fff;
  }

  nav ul {
    list-style: none;
    display: flex;
  }

  nav ul li {
    margin: 0 10px;
  }

  .hero {
    text-align: center;
    padding: 100px;
    background-color: #f0f0f0;
  }

  .hero img {
    width: 80%;
    max-width: 800px;
    margin-bottom: 20px;
  }

  footer {
    text-align: center;
    padding: 20px;
    background-color: #333;
    color: #fff;
  }

  .hero {
    position: relative;
  }

  .hero-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.8)
    );
    color: #fff;
    padding: 20px;
  }

  .hero-overlay form {
    display: flex;
    align-items: center;
  }

  .hero-overlay button {
    background-color: transparent;
    border: none;
    color: #fff;
    cursor: pointer;
  }

  .social-icons {
    display: flex;
    justify-content: center;
  }

  .social-icons a {
    margin: 0 10px;
    color: #fff;
  }
</style>
